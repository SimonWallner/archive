			<td><b>Content Name</b></td>
			<td><b>Reason</b></td>
			<td><b></b></td>
			</tr>
			<% break %>
		<% end %>
	<% end %>
	<% Reportblockcontent.all.each do |reportblockcontent| %>
	  <tr>
		<% if reportblockcontent.status ==4 %>
			<% if reportblockcontent.content_type ==0 %>
				<td><a href="/games/<%= reportblockcontent.content_id %>"><div><%= Game.find(reportblockcontent.content_id).title %></div></td>
			<% else if  reportblockcontent.content_type ==1 %>
				<td><a href="/developers/<%= reportblockcontent.content_id %>"><div><%= Developer.find(reportblockcontent.content_id).name %></div></td>
			<% else if  reportblockcontent.content_type ==2 %>
				<td><a href="/companies/<%= reportblockcontent.content_id %>"><div><%= Company.find(reportblockcontent.content_id).name %></div></td>
			<% end %>
			<% end %>
			<% end %>
			<td><%= reportblockcontent.reason %></td>
		
			<% if reportblockcontent.content_type ==0 %>
				<td><%= link_to 'Undelete', delete_game_path(reportblockcontent.content_id) %></td>
			<% else if  reportblockcontent.content_type ==1 %>
				<td><%= link_to 'Undelete', block_developer_path(reportblockcontent.content_id) %></td>
			<% else if  reportblockcontent.content_type ==2 %>
				<td><%= link_to 'Undelete', block_company_path(reportblockcontent.content_id) %></td>
			<% end %>
			<% end %>
			<% end %>
		<% end %>
	  </tr>
	<% end %>
	</table>

