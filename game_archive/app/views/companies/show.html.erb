<div class="company">
  <h1><%=  @company.name %></h1>
  <div class="fact-box">
    <%=

         imguploader = ImageUploader.new

        if not @company.image_url.to_s == imguploader.default_url

            image_tag @company.image_url.to_s , :class => "media rounded"

        end
    %>
    <p>

      <strong>Legal Name</strong>: studio radiolaris interactive entertainment GmbH <br />
      <strong>Location</strong>: Vienna, Austria<br />
      <strong>Founded:</strong>: June 2009, Vienna, Austria <br />
      <strong>Closed</strong>: July 2010, merged with Broken Rules</a><br />
	<p>
	</p>	
      <strong>Website</strong>: <span class="forceWrap"><a href="#">http://radiolaris.com</a></span><br />
	  <strong>Social Media</strong>: twitter: https://twitter.com/radiolaris <br />
	  <strong>Projects</strong>: Radio Flare - 2008<br />
    </p>
  </div>

  <div class="text">
    <%= markdown(@company.description) %>
  </div>

  <div class="clear"></div>
  <% if user_signed_in? %>
	<% if current_user.admin %>
		<%= link_to 'Edit', edit_company_path(@company) %> |
		<% if @reportblockcontent %>
					<% if @reportblockcontent.status ==1%>
						<%= link_to 'Remove Block', block_company_path(@company) %> |
					<% else if @reportblockcontent.status ==2%>
						<%= link_to 'Remove Lock', block_company_path(@company) %> |
					<% else%>
						<%= link_to 'Block', block_company_path(@company) %> |
					<% end %>
					<% end %>
			<% else%>
				<%= link_to 'Block', block_company_path(@company) %> |
			<% end %>
		<% else%>
			<% if @reportblockcontent %>
				<% if @reportblockcontent.status !=2%>
					<%= link_to 'Edit', edit_company_path(@company) %> |
				<% end %>
				<% if @reportblockcontent.status !=1%>
					<%= link_to 'Report', report_company_path(@company) %> |
				<% end %>
			<% else%>
				<%= link_to 'Edit', edit_company_path(@company) %> |
				<%= link_to 'Report', report_company_path(@company) %> |
			<% end %>
		<% end %>
	<% else%>
		<% if @reportblockcontent %>
			<% if @reportblockcontent.status !=1%>
				<%= link_to 'Report', report_company_path(@company) %> |
			<% end %>
		<% else%>
			<%= link_to 'Report', report_company_path(@company) %> |
		<% end %>
	<% end %>	
	
  <%= link_to 'Back', companies_path %>
</div>

<script>

    $(document).ready(function() {
        var target = $('div.company').offset().top - 25;

        $('html, body').animate({scrollTop: target}, 1000);
    })

</script>