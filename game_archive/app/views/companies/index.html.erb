<div>
  <h2>Companies</h2>
	
	<h3>Newest <%= getAmountNewest %></h3>
	<% Company.find(:all, :limit => getAmountNewest, :order => 'created_at DESC').each do |com| %>
		<div class="tiled_2x">
			<a href="/companies/<%= com.id %>">
				<div class="tile">
					<%= image_tag(com.image_url(:tiled_2x).to_s, :class => 'rounded teaser')%>
					<div class="caption"><div><%= com.name %></div></div>
				</div>
			</a>
		</div>
	<% end %>
	
	<div class="clear"></div>
	
	<h3>Most Popular <%= getAmountPopular %></h3>
	<% Company.find(:all, :limit => getAmountPopular, :order => 'popularity DESC').each do |com| %>
		<div class="tiled_2x">
			<a href="/companies/<%= com.id %>">
				<div class="tile">
					<%= image_tag(com.image_url(:tiled_2x).to_s, :class => 'rounded teaser')%>
					<div class="caption"><div><%= com.name %></div></div>
				</div>
			</a>
		</div>
	<% end %>
	
	<div class="clear"></div>
</div>

<% if user_signed_in? %>
    <div><br />

        <%= link_to "New Company", new_company_path %>
    </div>
<% end %>