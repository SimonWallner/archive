<h1>Companies</h1>
<div>
	<% coms = Company.find(:all, :limit => getAmountFeatured, :order => 'created_at DESC')[0..7] %>
	<% coms.concat(Company.find(:all, :limit => getAmountFeatured, :order => 'popularity DESC')[0..7]) %>
	<% coms = coms.uniq %>
	<% coms[0..7].each do |com| %>
		<% @reportblockcontent =Reportblockcontent.find_by_content_type_and_content_id(2,com.id)%>
		<% if !user_signed_in? && @reportblockcontent%>
			<% if (@reportblockcontent.status !=1)%>
				<div class="tiled_2x">
					<a href="<%= company_path com %>">
						<div class="tile">
							<%= image_tag(com.image_url(:tiled_2x).to_s, :class => 'rounded teaser')%>
							<div class="caption"><div><%= com.name %></div></div>
						</div>
					</a>
				</div>
			<% end %>
		<% else%>
			<div class="tiled_2x">
				<a href="<%= company_path com %>">
					<div class="tile">
						<%= image_tag(com.image_url(:tiled_2x).to_s, :class => 'rounded teaser')%>
						<div class="caption"><div><%= com.name %></div></div>
					</div>
				</a>
			</div>
		<% end %>
	<% end %>
</div>
<br class="clear" />

<h2>All Studios and Organisations in Alphabetic Order</h2>
<div>
	<% companies = Company.find(:all, :order => 'name') %>
	<% companies.each do |company| %>
		<% @reportblockcontent =Reportblockcontent.find_by_content_type_and_content_id(2,company.id)%>
		<% if !user_signed_in? && @reportblockcontent%>
			<% if (@reportblockcontent.status !=1)%>
				<div class="tiled_2x">
					<a href="<%= company_path company %>">
						<div class="tile">
							<%= image_tag(company.image_url(:tiled_2x).to_s, :class => 'rounded teaser')%>
							<div class="caption"><div><%= company.name %></div></div>
						</div>
					</a>
				</div>
			<% end %>
		<% else%>
			<div class="tiled_2x">
				<a href="<%= company_path company %>">
					<div class="tile">
						<%= image_tag(company.image_url(:tiled_2x).to_s, :class => 'rounded teaser')%>
						<div class="caption"><div><%= company.name %></div></div>
					</div>
				</a>
			</div>	
		<% end %>
	<% end %>
</div>

<br class="clear" />

<% if user_signed_in? %>
   <div class="more">
       <%= link_to "Create a New Studio or Organisation Article...", new_company_path %>
   </div>
<% end %>
