<%= form_for(@company) do |f| %>
  <% if @company.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@company.errors.count, "error") %> prohibited this company from being saved:</h2>

      <ul>
      <% @company.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
    <div>
      <div class="newFieldsDiv"><script type="text/javascript">loadfields('<%= company_url %>.json');</script></div>
      <%= submit_tag "Add Field", :type => 'button', :id => 'addFieldButton' ,
                   :onclick => 'addField(this,["Official Name","Location","Founded","Defunct","External Links","Userdefined"]);'
    %>
    </div>
    <div class="field">
      <%= f.label :image, 'Choose profile picture' %><br />
      <%= f.file_field :image %>
    </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
