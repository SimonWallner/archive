
<div>
    <h2>Games</h2>

    <% @games.each do |game| %>

      <div class="tiled_2x">
        <a href="/games/<%= game.id %>">
          <div class="tile " >
            <%= image_tag game.image_url(:tiled_2x).to_s, :class => "media rounded" %>
            <div class="caption"><div><%= game.title %></div>
           </div>
          </div>
        </a>
        </div>


    <% end %>
  <div class="clear"></div>
</div>

<div><br>
<%= link_to 'New Game', new_game_path %>
</div>




